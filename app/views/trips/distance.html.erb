<% @trips.each do |trip| %>
<hr>
<div class="row">
  <div class="col s4">
    <p>Trip Id: <%= trip.trip_id_number %></p>
    <h5>Distance: <%= trip.stats.first.distance %></h5>
    <h5>Max Speed: <%= trip.stats.first.max_speed %></h5>
  </div>
  <div class="col s4">
    <p>Start: <%= trip.start %></p>
    <p>Stop: <%= trip.stop %></p>
    <p>Status: <%= trip.status %></p>
  </div>
  <div class="col s4">
    <p>Vehicle Id: <%= trip.vehicleId %></p>
    <p>Device Id: <%= trip.deviceId %></p>
  </div>
</div>
<% end %>

<%= will_paginate @trips %>
<br>
