<!DOCTYPE html>
<html>
  <head>
    <title>Trip Api</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Arvo" rel="stylesheet">
  </head>
  <nav>
      <div class="nav-wrapper blue">
        <%= link_to "Trip Api Data", root_path, class: "brand-logo nav-logo" %>

        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if user_signed_in? %>
            <li>
              <%= link_to "Trips by Distance", distance_trips_path, class: "nav-bar-link" %>
            </li>
            <li>
              <%= link_to "Highest Speed Trip", highest_trips_path, class: "nav-bar-link" %>
            </li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-bar-login" %></li>
          <% else %>
            <li><%= link_to "Login", user_session_path, class: "nav-bar-login" %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  <body>
    <div class="container">
      <p class="notice flash-notice"><%= notice %></p>
      <p class="alert flash-alert"><%= alert %></p>
      <% if user_signed_in? %>
        <%= yield %>
      <% else %>
      <p>Please login to view trip data.</p>
      <% end %>
    </div>
  </body>
</html>
