<% @stats.each do |stat| %>
<hr>
<div class="row">
  <div class="col s4">
    <p>Trip Id: <%= stat.trip.trip_id_number %></p>
    <p>Distance <%= stat.distance %></p>
    <p>Start: <%= stat.trip.start %></p>
    <p>Stop: <%= stat.trip.stop %></p>
  </div>
  <div class="col s4">
    <p>Status: <%= stat.trip.status %></p>
  </div>
  <div class="col s4">
    <p>Vehicle Id: <%= stat.trip.vehicleId %></p>
    <p>Device Id: <%= stat.trip.deviceId %></p>
  </div>
</div>
<% end %>

<%= will_paginate @stats %>
<br>
